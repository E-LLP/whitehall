<ol class="policies document-list">
  <% policies.each do |policy| %>
    <%= content_tag(:li, class: "document-row") do %>
      <% if policy.kind_of? Hash %>
        <%= link_to policy["title"], policy["link"], class: 'title' %>
      <% else %>
        <%= link_to policy.title, policy.link, class: 'title' %>
      <% end %>
    <% end %>
  <% end %>
</ol>
